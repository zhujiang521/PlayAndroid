<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.article.ArticleActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_70"
        android:background="@color/colorAccent"
        android:orientation="vertical"
        android:paddingTop="@dimen/dp_20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:ignore="UselessParent">

            <ImageView
                android:id="@+id/articleImgBack"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_14"
                android:paddingBottom="@dimen/dp_14"
                android:src="@drawable/img_back" />

            <TextView
                android:id="@+id/articleTxtTitle"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="玩安卓"
                android:textColor="@color/white"
                android:singleLine="true"
                android:layout_gravity="center_vertical"
                android:lines="1"
                android:textSize="@dimen/sp_18" />

            <ImageView
                android:id="@+id/articleImgRight"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/dp_12"
                android:paddingBottom="@dimen/dp_12"
                android:src="@drawable/ic_more_vert_black_24dp" />



        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

<!--        <include-->
<!--            layout="@layout/layout_lce"/>-->

        <com.zj.play.view.article.X5WebView
            android:id="@+id/articleWebView"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </FrameLayout>

</LinearLayout>