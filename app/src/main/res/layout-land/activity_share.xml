<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zj.core.view.custom.TitleBar
        android:id="@+id/shareTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleName="@string/my_share" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/shareHeadLl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="invisible">


            <com.zj.core.view.custom.RoundImageView
                android:id="@+id/shareIvHead"
                android:layout_width="@dimen/dp_70"
                android:layout_height="@dimen/dp_70"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_20"
                android:src="@drawable/ic_head" />

            <TextView
                android:id="@+id/shareTvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_17"
                tools:text="Zhujiang" />

            <TextView
                android:id="@+id/shareTvRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_20"
                android:textColor="@color/white"
                android:textSize="@dimen/dp_15" />

        </LinearLayout>


        <com.zj.core.view.custom.ToTopRecyclerView
            android:id="@+id/shareToTopRecyclerView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"/>

    </LinearLayout>

</LinearLayout>
